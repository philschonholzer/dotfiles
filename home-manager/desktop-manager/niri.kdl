// Niri configuration for Philip's setup

prefer-no-csd

environment {
    ELECTRON_OZONE_PLATFORM_HINT "auto"
    GTK_THEME "Adwaita:dark"
}

input {
    keyboard {
        xkb {
            layout "us"
            variant "altgr-intl"
        }
        numlock
    }

    touchpad {
        tap
        natural-scroll
    }

    mouse {
        natural-scroll
        left-handed
    }
    warp-mouse-to-focus
    focus-follows-mouse max-scroll-amount="40%"
}

cursor {
    // Hide the cursor after one second of inactivity.
    hide-after-inactive-ms 650
    xcursor-theme "Bibata-Modern-Ice"
    xcursor-size 24
}


// Configure your monitor (update with actual output name from `niri msg outputs`)
output "DP-3" {
    mode "5120x2160"
    scale 1.6
    position x=0 y=0
}
output "eDP-1" {
    mode "2560x1600"
    scale 1.6
    position x=0 y=0
}

layout {
    gaps 8
    center-focused-column "never"
    always-center-single-column
    
    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }
    
    default-column-width { fixed 1280; }

    preset-window-heights {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
        proportion 1.0
    }

    focus-ring {
      off
    }

    border {
      width 3
      inactive-color "#727169"
      active-color "#7E9CD8"
    }

    struts {
      top -8
      left 32
      right 32
    }
}

overview {
    zoom 0.25
}

workspace "phone"
workspace "mail"
workspace "slack"
workspace "tasks"

// Start waybar at startup (already configured in your setup)
spawn-at-startup "waybar"

// Start Google Voice 
spawn-at-startup "chromium-google-voice"

// Start Missive
spawn-at-startup "chromium-missive"

// Start Slack
spawn-at-startup "slack"

// Start Trello
spawn-at-startup "chromium-trello-tasks"

// Start mako for notifications
spawn-at-startup "mako"

hotkey-overlay {
    // skip-at-startup
}

screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

animations {
    // Keep animations enabled but simple
}

// Open Google Voice on workspace "phone"
window-rule {
    match at-startup=true app-id=r#"^chrome-voice.google.com__-Work$"#
    open-on-workspace "phone"
}

// Open Missive on workspace "mail"
window-rule {
    match at-startup=true app-id="chrome-mail.missiveapp.com__-Work"
    open-on-workspace "mail"
}

// Open Slack on workspace "slack"
window-rule {
    match at-startup=true app-id="Slack"
    open-on-workspace "slack"
}

// Open Trello on workspace "tasks"
window-rule {
    match at-startup=true app-id="chrome-trello.com__v_Nqy4HPGw_philip-in-arbeit-Work"
    open-on-workspace "tasks"
}

// Window rules
window-rule {
    match app-id=r#"firefox$"# title="^Picture-in-Picture$"
    open-floating true
}

window-rule {
  geometry-corner-radius 4
  clip-to-geometry true
}

// Slack special workspace (similar to hyprland config)
// window-rule {
//     match app-id="Slack"
//     open-on-workspace 2
// }

// Google Voice on workspace 1

binds {
    // Important hotkeys
    Mod+Shift+Slash { show-hotkey-overlay; }
    
    // Core applications (matching your existing setup)
    Mod+T { spawn "ghostty"; }
    Mod+D hotkey-overlay-title="Run Application: fuzzel" { spawn "fuzzel"; }
    Mod+B hotkey-overlay-title="Firefox" { spawn "firefox"; }
    Super+Alt+L hotkey-overlay-title="Lock Screen: swaylock" { spawn "swaylock"; }
    
    // Password manager (matching hyprland config)
    Mod+P { spawn-sh "~/open-repo"; }
    
    // Web apps
    Mod+E hotkey-overlay-title="Trello Board" { spawn-sh "~/open-trello-board"; }
    Mod+A hotkey-overlay-title="ChatGPT" { spawn "chromium-chatgpt"; }
    Mod+N hotkey-overlay-title="Neovim" { spawn "ghostty" "-e" "nvim"; }
    
    // // Volume controls
    // XF86AudioRaiseVolume allow-when-locked=true { spawn-sh "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.1+"; }
    // XF86AudioLowerVolume allow-when-locked=true { spawn-sh "wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.1-"; }
    // XF86AudioMute        allow-when-locked=true { spawn-sh "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"; }
    // XF86AudioMicMute     allow-when-locked=true { spawn-sh "wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle"; }
    //
    // // Media controls
    // XF86AudioPlay        allow-when-locked=true { spawn-sh "playerctl play-pause"; }
    // XF86AudioStop        allow-when-locked=true { spawn-sh "playerctl stop"; }
    // XF86AudioPrev        allow-when-locked=true { spawn-sh "playerctl previous"; }
    // XF86AudioNext        allow-when-locked=true { spawn-sh "playerctl next"; }
    //
    // // Brightness controls
    // XF86MonBrightnessUp allow-when-locked=true { spawn "brightnessctl" "--class=backlight" "set" "+10%"; }
    // XF86MonBrightnessDown allow-when-locked=true { spawn "brightnessctl" "--class=backlight" "set" "10%-"; }
    
    // Window management
    Mod+W repeat=false { close-window; }
    Mod+O repeat=false { toggle-overview; }
    
    // Navigation (vim-like)
    Mod+H { focus-column-left; }
    Mod+L { focus-column-right; }
    
    // Moving windows
    Mod+Shift+H { move-column-left; }
    Mod+Shift+L { move-column-right; }
    
    // Workspace navigation
    Mod+J { focus-workspace-down; }
    Mod+K { focus-workspace-up; }
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    
    // Move to workspace
    Mod+Shift+J { move-column-to-workspace-down; }
    Mod+Shift+K { move-column-to-workspace-up; }
    Mod+Shift+Ctrl+J { move-workspace-down; }
    Mod+Shift+Ctrl+K { move-workspace-up; }
    Mod+Shift+1 { move-column-to-workspace 1; }
    Mod+Shift+2 { move-column-to-workspace 2; }
    Mod+Shift+3 { move-column-to-workspace 3; }
    Mod+Shift+4 { move-column-to-workspace 4; }
    Mod+Shift+5 { move-column-to-workspace 5; }
    Mod+Shift+6 { move-column-to-workspace 6; }
    Mod+Shift+7 { move-column-to-workspace 7; }
    Mod+Shift+8 { move-column-to-workspace 8; }
    Mod+Shift+9 { move-column-to-workspace 9; }
    
    // Column management
    Mod+BracketLeft  { consume-or-expel-window-left; }
    Mod+BracketRight { consume-or-expel-window-right; }
    Mod+Tab { focus-window-down-or-top; }
    Mod+Shift+Tab { toggle-column-tabbed-display; }
    
    // Sizing
    Mod+R { switch-preset-column-width; }
    Mod+Shift+R { switch-preset-window-height; }
    Mod+F { maximize-column; }
    Mod+Shift+F { fullscreen-window; }
    Mod+C { center-column; }
    
    // Fine adjustments
    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }
    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }
    
    // Floating toggle
    Mod+V { toggle-window-floating; }
    Mod+Shift+V { switch-focus-between-floating-and-tiling; }
    
    // Screenshots
    Print { screenshot; }
    Ctrl+Print { screenshot-screen; }
    Alt+Print { screenshot-window; }
    
    // System
    Mod+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }
    Mod+Shift+E { quit; }
    Mod+Shift+P { power-off-monitors; }
}
